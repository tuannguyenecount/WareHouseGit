
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles
{
    <link href="~/Content/tinthoitrang.css" rel="stylesheet" />
}

<div class="content-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 style="margin-bottom:0px">@ViewBag.Title</h2>
                <div id="detail">
                    <div class="fck_detail width_common">
                        @Html.Raw(Model)
                    </div>
                </div>
            </div>
            <div class="col-md-12" style="padding:20px">
                <div id="like_fb">
                    <div class="fb-like" data-href="@Request.Url.ToString()" data-layout="standard" data-action="like" data-size="small" data-show-faces="true" data-share="true"></div>
                </div>
                <div id="comments">
                    <div class="fb-comments" data-href="@Request.Url.ToString()" data-width="100%" data-numposts="5"></div>
                </div>
            </div>
        </div> <!-- /.row -->
    </div> <!-- /.container -->
</div> <!-- /.content-section -->