@model IEnumerable<Product>
    @foreach (var item in Model)
{
    <div class="col-md-3 col-xs-6  divItem">
        <div class="product-item-vote">
            <div class="product-thumb">
                <a href="@Url.Action("Details","Product",new {Alias =  item.Alias_SEO})">
                    <img src="@item.ImageCustom" width="@Context.Application["WidthImageProduct"]" height="@Context.Application["HeightImageProduct"]" title="@item.Name" data-toggle="tooltip" data-placement="bottom">
                </a>
            </div> <!-- /.product-thum -->
            <div class="product-content">
                <div class="divName">
                    <h5 data-toggle="tooltip" data-placement="bottom" title="@item.Name"><a href="@Url.Action("Details","Product",new { Alias =  item.Alias_SEO})">@(item.Name)</a></h5>
                </div>
                <span class="price">@(item.PriceThuc.ToString("#,##0").Replace(',', '.')) <sup>đ</sup> </span>
                <ul class="progess-bars">
                    <li>
                        <div class="progress">
                            <div data-toggle="tooltip" title="Lượt thích" class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: @(40 + item.Likes)%"></div>
                            <span>@item.Likes <i class="fa fa-thumbs-up"></i> </span>
                        </div>
                    </li>
                    <li>
                        <div class="progress">
                            <div data-toggle="tooltip" title="Lượt yêu thích" class="progress-bar comments" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: @(40 + item.LoveTurns)%"></div>
                            <span class="comments">@item.LoveTurns<i class="fa fa-heart"></i></span>
                        </div>
                    </li>
                </ul>
            </div> <!-- /.product-content -->
        </div> <!-- /.product-item-vote -->
    </div> <!-- /.col-md-3 -->
}

