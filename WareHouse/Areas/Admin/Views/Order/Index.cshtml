@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Order>

@{
    ViewBag.Title = ViewBag.Message = "Danh sách đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr class="bg-info">
                <th>Mã số</th>
                <th>
                    Họ tên
                </th>
                <th>
                    Tổng số lượng
                </th>
                <th>
                    Tổng thành tiền
                </th>
                <th>
                    Ngày đặt hàng
                </th>
                <th>
                    Đã giao hàng
                </th>
                <th>
                    Đã thanh toán?
                </th>
                <th>Bị xóa?</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>#@item.Id</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalMoney)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOrder)
                    </td>
                    <td>
                        @if (item.Assigned) {
                            <label class="label label-success">Đã giao</label>
                        }
                        else {
                            <label class="label label-danger">Chưa giao</label>
                        }
                    </td>
                    <td>
                        @if (item.Paid) {
                            <label class="label label-success">Đã thanh toán</label>
                        }
                        else {
                            <label class="label label-danger">Chưa thanh toán</label>
                        }
                    </td>
                    <td>
                        @if (item.Deleted) {
                            <label class="label label-danger">Đã xóa</label>
                        }
                        else {
                            <label class="label label-success">Chưa xóa</label>
                        }
                    </td>
                    <td>
                        <a class="btn btn-default btn-sm" href="@Url.Action("ThayTrangThai", new { id = item.Id})">Thay trạng thái</a>
                    </td>
                    <td>
                        <a class="btn btn-default btn-sm" href="@Url.Action("Details", new { id = item.Id})"><span class="glyphicon glyphicon-zoom-in"></span> Chi tiết</a>

                    </td>
                    <td>
                        @if (item.Deleted == false) {
                            <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash"></span> Xóa</a>
                        }
                        else {
                            <a href="@Url.Action("RemoveDeleted", new { id = item.Id })" class="btn btn-warning btn-sm">Bỏ xóa</a>

                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="text-center" colspan="11">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayLinkToLastPage = PagedListDisplayMode.Always, DisplayLinkToFirstPage = PagedListDisplayMode.Always })
                </td>
            </tr>
        </tfoot>
    </table>
</div>

