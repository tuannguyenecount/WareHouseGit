@model AspNetUser
@{
    ViewBag.Title = "Quản lý thành viên";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Message = "Cấm thành viên";
}

@section scripts
{
    @if (Session["XacThucLan2"] == null)
    {
        <script>
        $(document).ready(function () {
            $("#btnXacThucLan2").click();
        });
    </script>

    }
   
}
<div class="col-md-8 col-md-offset-2">
    @using (Html.BeginForm("KhoaConfirmed","AspNetuser", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div>
            <input name="userId" type="hidden" value="@Model.Id" />
            <label>Khóa thành viên @Html.DisplayFor(m=>Model.FullName) đến ngày:</label>
            <div class='input-group date' id='datetimepicker'>
                @Html.TextBoxFor(m => m.LockoutEndDateUtc, new { type="date", @class="form-control"})
                <span class="input-group-addon">
                    <span class="fa fa-calendar">
                    </span>
                </span>
            </div>
        </div>
        <div>&nbsp;</div>
        <div class="text-center">
            <button type="submit" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-lock"></span> Khóa</button>
            <a href="@Url.Action("Index")" class="btn btn-default btn-sm">Trở về</a>
        </div>
    }
</div>
@if (Session["XacThucLan2"] == null)
{
    <button id="btnXacThucLan2" type="button" data-toggle="modal" data-target="#thongBaoXacThucLan2" class="displaynone"></button>
    <div class="modal fade" id="thongBaoXacThucLan2" role="dialog">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Thông báo xác thực</h4>
                </div>
                <div class="modal-body">
                    <label>Vì lý do bảo mật. Bạn phải nhập mật khẩu để thực hiện thao tác này</label>
                    @using (Html.BeginForm("XacThucLan2", "Account", new { area = "" }, FormMethod.Post))
                    {
                        <input type="password" name="password" placeholder="Nhập mật khẩu của bạn" />
                        <input name="returnUrl" type="hidden" value="@Request.Url.ToString()" />
                        <button type="submit" class="btn btn-success">Chấp nhận</button>
                    }
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("Index")" class="btn btn-default" >Đóng</a>
                </div>
            </div>

        </div>
    </div>
}
