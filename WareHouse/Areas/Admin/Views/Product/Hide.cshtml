
@{
    ViewBag.Title = "Ẩn sản phẩm";
    ViewBag.Message = "Ẩn sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@if (Session["XacThucLan2"] == null)
{
    @section scripts
    {
        <script>
        $(document).ready(function () {
            $("#btnXacThucLan2").click();
        });
        </script>
    }
}
<div class="col-md-12 text-center">
    @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h3>Xác nhận tạm ẩn sản phẩm "@ViewBag.Name" ? </h3>
        <input type="hidden" name="Id" value="@ViewBag.Id" />
        <input type="hidden" name="returnURL" value="@(Request.UrlReferrer != null? Request.UrlReferrer.ToString() : Url.Action("Index") )" />
        <div>
            <button type="submit" class="btn btn-danger btn-sm">Đồng ý</button>
            <a href="@Url.Action("Index",new {page = Request.QueryString["page"] })" class="btn btn-default btn-sm">Trở về</a>
        </div>
    }
</div>
@if (Session["XacThucLan2"] == null)
{
    <button id="btnXacThucLan2" type="button" data-toggle="modal" data-target="#thongBaoXacThucLan2" class="displaynone"></button>
    <div class="modal fade" id="thongBaoXacThucLan2" role="dialog">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Thông báo xác thực</h4>
                </div>
                <div class="modal-body">
                    <label>Vì lý do bảo mật. Bạn phải nhập mật khẩu để thực hiện thao tác này</label>
                    @using (Html.BeginForm("XacThucLan2", "Account", new { area = "" }, FormMethod.Post))
                    {
                        <input type="password" name="password" placeholder="Nhập mật khẩu của bạn" />
                        <input name="returnUrl" type="hidden" value="@Request.Url.ToString()" />
                        <button type="submit" class="btn btn-success">Chấp nhận</button>
                    }
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("Index")" class="btn btn-default" @*data-dismiss="modal"*@>Đóng</a>
                </div>
            </div>

        </div>
    </div>
}
