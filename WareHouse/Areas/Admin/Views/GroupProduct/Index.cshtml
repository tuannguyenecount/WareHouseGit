@model IEnumerable<GroupProduct>

@{
    ViewBag.Title = "Phân loại, nhóm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Message = "Nhóm sản phẩm của " + ViewBag.Name;
}
<p>
    @Html.ActionLink("Thêm", "Create", new { CategoryId = Request.QueryString["CategoryId"] }, new {@class="btn btn-success btn-sm" })
</p>
<table class="table table-hover">
    <thead >
        <tr class="bg-info">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem=>item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="text-center">
            @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-sm" })

        </td>
        <td class="text-center">
            @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}
</table>
<div class="col-md-6">
    <a href="@Url.Action("Index", "Category")">Về danh sách phân loại</a>
</div>
