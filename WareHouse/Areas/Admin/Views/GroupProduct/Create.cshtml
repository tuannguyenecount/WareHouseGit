@model GroupProduct

@{
    ViewBag.Title = "Phân loại, nhóm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Message = "Thêm nhóm sản phẩm thuộc " + ViewBag.Name;
    }
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <input type="hidden" name="CategoryId" value="@ViewBag.CategoryId" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Name,  new { @class = "form-control",style="height:auto" } )
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-8">
                <input type="submit" value="Thêm" class="btn btn-success" />
                <a href="@Url.Action("Index", new { CategoryId = Request.QueryString["CategoryId"]})" class="btn btn-default">Về danh sách</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
