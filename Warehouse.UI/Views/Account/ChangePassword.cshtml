@model ChangePasswordViewModel


@{
    ViewBag.Title = Warehouse.Language.Manage.Index.ChangePassword;
}
    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-md-3 control-label">@Warehouse.Language.Manage.Index.OldPassword</label>
            <div class="col-md-8">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">@Warehouse.Language.Manage.Index.NewPassword</label>
            <div class="col-md-8">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">@Warehouse.Language.Manage.Index.ConfirmPassword</label>
            <div class="col-md-8">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-8">
                <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> @Warehouse.Language.Shared.Index.Update</button>
            </div>
        </div>
    }
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




