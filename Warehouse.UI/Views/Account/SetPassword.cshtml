@model SetPasswordViewModel

@{
    ViewBag.Title = Warehouse.Language.Manage.Index.SetPassword;
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
    ViewBag.Message = Warehouse.Language.Manage.Index.SetPassword;
}
<div class="col-md-12">
    <label>
       @Warehouse.Language.Account.Index.MessageSetPassword
    </label>
</div>
@using (Html.BeginForm("SetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-3 control-label">@Warehouse.Language.Manage.Index.NewPassword</label>
        <div class="col-md-9">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">@Warehouse.Language.Manage.Index.ConfirmPassword</label>
        <div class="col-md-9">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> @Warehouse.Language.Manage.Index.SetPassword</button>
            <button type="button" class="btn btn-default" onclick="history.go(-1);">@Warehouse.Language.Shared.Index.GoBack</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
