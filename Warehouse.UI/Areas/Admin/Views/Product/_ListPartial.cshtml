@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Product>
@{
    Layout = null;
}


@if (Model.Count > 0)
{
    @Html.Partial("_TablePartial")
    <div class="text-center clearfix">
        @Html.PagedListPager(Model, page => Url.Action("ShowList", new { Page = page, Category = Request.QueryString["Category"], sortName = ViewBag.sortName, sortBy = ViewBag.sortBy }),
      PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions() { Display = PagedListDisplayMode.Always, DisplayPageCountAndCurrentLocation = true, DisplayLinkToFirstPage = PagedListDisplayMode.Always, DisplayLinkToLastPage = PagedListDisplayMode.Always }, new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "result", OnFailure = "alert('Không thể phân trang')" }))
    </div>
}
else
{
    <div class="text-center">
        <p>Không có sản phẩm</p>
    </div>
}



