@using PagedList.Mvc;
@using PagedList;
@model IPagedList<MailBox>

@{
    ViewBag.Title = "Hộp thư liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Message = "Hộp thư liên hệ";
}
<div class="col-md-12">
    @if(Model.Count > 0)
    { 
    <div class="table-responsive">
        <table id="tblMailBox" class="table table-bordred table-striped">
            <thead>
                <tr class="bg-info">
                    <th>
                       Tên
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Chủ đề
                    </th>
                    <th>
                        Ngày cập nhật
                    </th>
                    <th colspan="2">Thao tác</th>

                </tr>
            </thead>

            <tbody>
                @foreach (MailBox item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>@item.Email</td>
                        <td>@Html.DisplayFor(m => item.Subject)</td>
                        <td>@Html.DisplayFor(m => item.DateSend)</td>
                        <td>
                            <p data-placement="top" data-toggle="tooltip" title="Xem nội dung chi tiết"><button class="btn btn-primary btn-xs" data-title="Xem nội dung chi tiết" data-toggle="modal" data-target="#detail@(item.Id)"><span class="glyphicon glyphicon-eye-open"></span></button></p>
                            <div class="modal fade" id="detail@(item.Id)" tabindex="-1" role="dialog" aria-labelledby="detail" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                                            <h4 class="modal-title custom_align" id="Heading">Nội dung chi tiết</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p>
                                                @item.Content
                                            </p>
                                        </div>
                                        <div class="modal-footer ">
                                            <button type="button" data-dismiss="modal" class="btn btn-primary btn-lg" style="width: 100%;"> Đóng</button>
                                        </div>
                                    </div>
                                    <!-- /.modal-content -->
                                </div>
                                <!-- /.modal-dialog -->
                            </div>

                        </td>

                        <td>
                            <p data-placement="top" data-toggle="tooltip" title="Xóa"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete@(item.Id)"><span class="glyphicon glyphicon-trash"></span></button></p>
                            <div class="modal fade" id="delete@(item.Id)" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        @using (Html.BeginForm("Delete", "MailBox", FormMethod.Post, new { area = "Admin" }))
                                        {
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                                                <h4 class="modal-title custom_align" id="Heading">Xóa hộp thư</h4>
                                            </div>
                                            <div class="modal-body">

                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <input type="hidden" name="page" value="@(Request.QueryString["page"] != null ? Request.QueryString["page"].ToString() : "1")" />
                                                <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Bạn có chắc muốn xóa hộp thư có ID là @item.Id?</div>

                                            </div>
                                            <div class="modal-footer ">
                                                <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Có</button>
                                                <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Không</button>
                                            </div>
                                        }
                                    </div>

                                    <!-- /.modal-content -->
                                </div>
                                <!-- /.modal-dialog -->
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

        <div class="clearfix"></div>
        <div class="pull-right">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayLinkToLastPage = PagedListDisplayMode.Always, DisplayLinkToFirstPage = PagedListDisplayMode.Always })
        </div>
    </div>
    }
    else
    {
        <div class="alert alert-info">Chưa có thư nào</div>
    }
    @if(ViewBag.ThongBaoLoi != null)
    { 
    <div style="clear:both"  class="col-md-12 alert alert-danger">
        @ViewBag.ThongBaoLoi
    </div>
    }
</div>