@model Blog
@{
    ViewBag.Title = "Xem bài viết Blog";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Bảng điều khiển</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <div class="col-md-10">
                        <table class="table table-hover table-info table-border-none">
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Image)</td>
                                <td>
                                    <img src="~/Photos/Blogs/@Model.Image" width="@Context.Application["WidthImageBlog"]" height="@Context.Application["HeightImageBlog"]" />
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Id)</td>
                                <td>@Html.DisplayFor(model => model.Id)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Title)</td>
                                <td>@Html.DisplayFor(model => model.Title)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Description)</td>
                                <td>@Html.DisplayFor(model => model.Description)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Alias)</td>
                                <td>@Html.DisplayFor(model => model.Alias)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Display)</td>
                                <td>
                                    @if (Model.Display.HasValue && Model.Display.Value == true)
                                    {
                                        <span class="text-success">Hiển thị</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">Ẩn</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.ViewCount)</td>
                                <td>@Html.DisplayFor(model => model.ViewCount)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.LikeCount)</td>
                                <td>@Html.DisplayFor(model => model.LikeCount)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.DateCreated)</td>
                                <td>@Html.DisplayFor(model => model.DateCreated)</td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.UserId)</td>
                                <td>
                                    @if (Model.User.UserName != null)
                                    {
                                        @Html.DisplayFor(model => model.User.UserName)
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.DisplayNameFor(model => model.Content)</td>
                                <td>@Html.Raw(Model.Content)</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix text-right">
                    <a href="@Url.Action("Edit",new { Id = Model.Id })" class="btn btn-default btn-sm"><i class="fa fa-edit"></i> Sửa</a>
                    @Html.ActionLink("Về danh sách", "Index", null, new { @class = "btn btn-default btn-sm" })
                </div>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

