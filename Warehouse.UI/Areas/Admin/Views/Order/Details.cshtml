@model Order

@{
    ViewBag.Title = "Chi tiết đơn hàng " + Model.Id;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Message = "Chi tiết đơn hàng " + Model.Id;
}
@section styles
{
    <style>
        table {
            color: #2a3f52;
        }

            table td {
                padding: 5px;
            }

        tr td[class='text-right'] {
            width: 150px;
        }

        label {
            font-size: 14px;
        }
    </style>
}
<div class="col-md-6">
    <h5 class="text-info">Thông tin đơn hàng</h5>
    <hr/>
    <table>
        <tr>
            <td>Mã đơn hàng:</td>
            <td><span>#@Model.Id</span></td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.TotalCount):</td>
            <td><span>@Model.TotalCount</span></td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.TotalMoney):</td>
            <td><span>@Html.DisplayFor(m => Model.TotalMoney)</span></td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.DateOrder):</td>
            <td><span>@Html.DisplayFor(model => model.DateOrder)</span></td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Assigned):</td>
            <td><span>@(Model.Assigned == true ? "Đã giao" : "Chưa giao")</span></td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Paid):</td>
            <td><span>@(Model.Paid == true ? "Đã thanh toán" : "Chưa thanh toán")</span></td>
        </tr>
    </table>
</div>
<div class="col-md-6">
    <h5 class="text-info">Thông tin khách hàng: </h5>
    <hr />
    <table>
        <tr>
            <td >@Html.DisplayNameFor(model => model.Name):</td>
            <td><span>@Model.Name</span></td>
        </tr>
        <tr>
            <td >@Html.DisplayNameFor(model => model.Email):</td>
            <td><span>@Model.Email</span></td>
        </tr>
        <tr>
            <td >@Html.DisplayNameFor(model => model.Phone):</td>
            <td><span>@Model.Phone</span></td>
        </tr>
        <tr>
            <td >@Html.DisplayNameFor(model => model.Address):</td>
            <td><span>@Model.Address</span></td>
        </tr>
    </table>
</div>
<div style="clear:both"></div>
<h5 class="text-info">Chi tiết đơn hàng</h5>
<hr />
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (OrderDetail item in ViewBag.dsOrderDetail)
        {
            <tr>
                <td class="text-center"><img src="~/Photos/Product/@item.ProductImage" width="80" height="70" /> </td>
                <td>@item.ProductName</td>
                <td>@item.Count</td>
                <td>@Html.DisplayFor(a => item.Price)</td>
                <td>@Html.DisplayFor(a => item.Money)</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a href="@(Request.UrlReferrer != null ? Request.UrlReferrer.ToString() : Url.Action("Index"))" class="btn btn-default btn-sm">Trở về</a>
</div>